<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_question_header"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dashboard_row_padding"
    android:paddingRight="@dimen/dashboard_row_padding"
    android:paddingTop="@dimen/dashboard_row_padding" >

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginLeft="@dimen/top_separator_line"
        android:layout_marginRight="@dimen/top_separator_line"
        android:background="@drawable/top_border" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/top_separator_line"
            android:layout_marginRight="@dimen/top_separator_line"
            android:paddingLeft="@dimen/top_separator_line"
            android:paddingRight="@dimen/top_separator_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <org.eyeseetea.malariacare.views.TextCard
                android:id="@+id/question_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/top_separator_line"
                android:layout_marginRight="@dimen/top_separator_line"
                android:gravity="left|center_vertical"
                android:text="@string/new_case_title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/question_header_title"
                android:textSize="@dimen/header_text_size"
                app:tDimension="@string/font_size_level1"
                app:tFontName="@string/condensed_font_name" />

            <include layout="@layout/vertical_divisor_view"></include>
        </LinearLayout>

        <org.eyeseetea.malariacare.views.TextCard
            android:id="@+id/question"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.5"
            android:autoText="false"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/top_separator_line"
            android:layout_marginRight="@dimen/top_separator_line"
            android:paddingLeft="@dimen/top_separator_line"
            android:paddingRight="@dimen/top_separator_line"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/question_header_subtitle"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold"
            app:tDimension="@string/font_size_level1"
            app:tFontName="@string/condensed_font_name" />
    </LinearLayout>
</LinearLayout>