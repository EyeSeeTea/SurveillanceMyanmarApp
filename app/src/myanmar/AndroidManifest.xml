<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.eyeseetea.malariacare">

    <application
        android:name=".EyeSeeTeaApplication"
        android:allowBackup="false"
        android:icon="@drawable/pictureapp_logo"
        android:label="@string/malaria_case_based_reporting"
        android:theme="@style/EyeSeeTheme"
        tools:replace="android:allowBackup, android:icon">

        <provider
            android:name=".database.utils.SCMMDBProvider"
            android:authorities="org.eyeseetea.malariacare.database.utils.SCMMDBProvider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:node="merge">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>